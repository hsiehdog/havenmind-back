# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ai_dashboard?schema=public"

# Auth (Better Auth session + cookies)
BETTER_AUTH_SECRET="a-long-random-string"
APP_BASE_URL="http://localhost:4000"
TRUSTED_ORIGINS="http://localhost:3000"

# Vercel AI SDK / OpenAI provider
OPENAI_API_KEY="sk-..."
AI_MODEL="gpt-4o-mini"

# Storage
AWS_S3_BUCKET="havenmind-dev"
AWS_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID="local-dev-key"
AWS_SECRET_ACCESS_KEY="local-dev-secret"
# Optional if using temporary credentials
# AWS_SESSION_TOKEN="..."
# Optional if using a custom endpoint such as LocalStack or MinIO
# AWS_S3_ENDPOINT="http://localhost:9000"
AWS_S3_FORCE_PATH_STYLE=false
FILE_UPLOAD_MAX_BYTES=10485760
